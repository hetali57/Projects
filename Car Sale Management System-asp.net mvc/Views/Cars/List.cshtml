@model IEnumerable<Vintage_World.Models.Car>

@{
    ViewBag.Title = "List";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="@Url.Content("~/style.css")" rel="stylesheet" />
<style>
    .panel {
        margin-top: 5%;
        background: transparent;
    }


    tr {
        transition: all 0.5s;
    }

        tr:hover {
            background-color: #f0ad4e;
            transition: 0.5s;
        }

    .btn-warning {
        transition: all 0.8s;
    }

        .btn-warning:hover, .btn-warning:focus {
            transition: 0.8s;
            background-color: #428bca;
            border-color: #428bca;
        }

    .panel-footer {
        background-color: #808080;
        color: white;
    }
</style>
<script>
    $(document).ready(function () {
        $(".form-control").popover({ title: "Search Here", placement: "top" });
    })
</script>

@using (@Html.BeginForm("List", "Cars", FormMethod.Get))
{
    <div class="container-fluid">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3">
                        <h2 class="text-center pull-left" style="padding-left: 30px;"> <span class="glyphicon glyphicon-list-alt"> </span> Car List</h2>
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9">
                        <div class="col-xs-12 col-sm-12 col-md-12">

                            @Html.ActionLink(" + ", "Create", "Cars", null, htmlAttributes: new { @class = "btn-primary btn-lg col-sm-offset-6" })
                            <div style="margin-top:25px;margin-right:-90px">
                                @Html.ActionLink("All Cars", "List", "Cars", null, htmlAttributes: new { @class = "btn-danger btn-lg col-md-offset-5" })

                            </div>

                        </div>


                    </div>
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center"> @Html.DisplayNameFor(model => model.Make) </th>
                            <th class="text-center"> @Html.DisplayNameFor(model => model.Model) </th>
                            <th class="text-center"> @Html.DisplayNameFor(model => model.Year) </th>
                            <th class="text-center"> @Html.DisplayNameFor(model => model.Price) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.Kms) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.EnginLitres) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.Transmission) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.Fuel_Type) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.IsUsed) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.Color) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.CustomerID) </th>
                            <th class="text-center">  @Html.DisplayNameFor(model => model.Image) </th>
                            <th>&nbsp;&nbsp;&nbsp;<em class="fa fa-cog"></em> &nbsp;Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="edit" id="detail">
                                <td id="no" class="text-center"> @Html.DisplayFor(modelItem => item.Make) </td>
                                <td id="name" class="text-center"> @Html.DisplayFor(modelItem => item.Model) </td>
                                <td id="mobile" class="text-center"> @Html.DisplayFor(modelItem => item.Year) </td>
                                <td id="mail" class="text-center"> @Html.DisplayFor(modelItem => item.Price) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.Kms) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.EnginLitres) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.Transmission) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.Fuel_Type) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.IsUsed) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.Color) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.CustomerID) </td>
                                <td id="city" class="text-center"> @Html.DisplayFor(modelItem => item.Image) </td>
                                <td>

                                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default fa fa-pencil" })
                                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger fa fa-trash" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-8">
                        </div>
                        <div class="col-md-4">
                            <p class="muted pull-right"><strong> © 2018 Vintage World Presented...</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<p>@Html.ActionLink("Back to Menu", "Admin", "Customers", null, htmlAttributes: new { @class = "btn-danger btn-lg" })</p>
